//Exercício 2 - Hora de codar
//Média de notas dos alunos

#include <stdio.h>

int main() {
   //Declaração de variáveis
   char nome[100];
   float nota1, nota2, nota3;
   
    //Entrada de dados

    printf(" =-=- Programa de Média de Notas -=-=\n");  // Exibe o título do programa
    
    printf("Digite o nome do aluno: ");
    scanf("%s", nome);  // Lê o nome do aluno

    printf("Digite a primeira nota: ");
    scanf("%f", &nota1);  // Lê a primeira nota

    printf("Digite a segunda nota: ");
    scanf("%f", &nota2);  // Lê a segunda nota

    printf("Digite a terceira nota: ");
    scanf("%f", &nota3);  // Lê a terceira nota

    float media = (nota1 + nota2 + nota3) / 3.0;  // Cálculo da média
   //A média é calculada como a soma das notas dividida por 3.0 (número de notas)

    printf("A média do aluno %s é: %.2f\n", nome, media);  // Exibe a média do aluno

    return 0;  // Indica que o programa terminou com sucesso
    //O programa retorna 0 para indicar que foi executado com sucesso.
}

